[include]
  path = ~/.gitconfig.local

[init]
	defaultBranch = main

[push]
	default = matching

[core]
	editor = hx
	excludesfile = ~/.gitconfig.ignore

[alias]
	cm = !git add . && git commit -m
    sw = "!git fetch origin && git switch $1 2>/dev/null || git switch -c $1 2>/dev/nul || true"
	ss = status -s
	br = branch
	lo = log --oneline
	ps = push origin HEAD
	pl = pull
	wp = !git add . && git commit -am "wip"
	pr = commit --allow-empty -m "Make pull request"

[commit]
	gpgsign = true

[gpg]
	format = ssh
